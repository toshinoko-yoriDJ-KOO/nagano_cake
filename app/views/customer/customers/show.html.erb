<!--kuma-->
<div class="container">
  <div class="row">
    <h3>マイページ</h3>
    <h3>登録情報</h3>
    <%= link_to "編集する", customers_information_edit_path(@customer), class: 'btn btn-success' %>
    <table class= table table-bordered >
      <thead class="thead-light">
        <tr>
          <th>名前</th>
            <td><%= @customer.last_name %> <%= @customer.first_name %></td>
        </tr>
        <tr>
        <th>カナ</th>
          <td><%= @customer.last_name_kana %> <%= @customer.first_name_kana %></td>
        </tr>
        <tr>
          <th>郵便番号</th>
            <td><%= @customer.zip_code %></td>
        </tr>
        <tr>
          <th>住所</th>
            <td><%= @customer.address %></td>
        </tr>
        <tr>
          <th>電話番号</th>
            <td><%= @customer.phone_number %></td>
        </tr>
        <tr>
          <th>メールアドレス</th>
            <td><%= @customer.email %></td>
        </tr>
      </thead>
    </table>
    <h3>配送先</h3>
    <%= link_to "一覧を見る", delivery_addresses_path, class: 'btn btn-primary' %>
    <h3 >注文履歴</h3>
    <%= link_to "一覧を見る", orders_path, class: 'btn btn-primary' %>
</div>