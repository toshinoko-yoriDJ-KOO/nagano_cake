<!--kuma-->
<div class="container">
  <div class="row">
    <table class="table table-bordered">
      <thead class="thead-light">
        <tr>
          <th>注文日</th>
            <th>配送日</th>
            <th>注文商品</th>
            <th>支払い金額</th>
            <th>ステータス</th>
            <th>注文詳細</th>
          </tr>
        </thead>
        <tbody>
          <% @order.each do |order| %>
            <tr>
              <td>
                <%= order.created_at %>
              </td>
              <td>
                <%= order.postal_code %>
                <%= order.address %>
                <%= order.name%>
              </td>
              <td>
                <% order.order_products.each do |order_product| %>
                <%= order_product.product.name %><br>
                <% end %>
              </td>
                <td><%= order.total_payment %></td>
               <td><%= order.status_i18n %></td>
              <td><%= link_to '表示する', order_path(order.id),class:'btn btn-primary' %></td>
            </tr>
          <% end %>
        </tbody>
    </table>
  </div>
</div>