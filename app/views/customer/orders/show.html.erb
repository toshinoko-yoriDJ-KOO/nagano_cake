<!--kuma-->
<div class="container">
  <div class="row my-4">
    <h3>注文履歴詳細</h3>
  </div>
  <div class="row my-4">
    <div class='col-7'>
    <h2>注文情報</h2>
      <table class="table table-bordered">
        <thead class="thead-light">
          <tr>
            <th>注文日</th>
            <td><%= @order.created_at %></td>
          </tr>
          <tr>
            <th>配送先</th>
            <td>
              〒<%= @order.postal_code %>
              <%= @order.address %>
              <%= @order.name %>
            </td>
          </tr>
          <tr>
            <th>支払方法</th>
            <td><%= @order.payment_method_i18n %></td>
          </tr>
          <tr>
            <th>ステータス</th>
            <td><%= @order.status_i18n %></td>
          </tr>
        </thead>
      </table>
    </div>
      <div class='col-4'>
        <h2>請求情報</h2>
        <table class="table table-bordered">
          <thead class="thead-light">
          <tr>
            <th>商品合計</th>
            <td><%= @order.total_payment %></td>
          </tr>
          <tr>
            <th>配送料</th>
            <td><%= @order.shopping_cost %>円</td>
          </tr>
          <tr>
          <th>請求金額</th>
            <td><%= @order.shopping_cost + @order.total_payment %></td>
          </tr>
          </thead>
        </table>
      </div>
    </div>
  </div>
  <div class="container">
      <h2>注文内容</h2>
        <div class="row ">
          <div class='col-10'>
            <table class="table table-bordered">
              <thead class="thead-light">
                <tr>
                  <th>商品</th><th>単価（税込）</th><th>個数</th><th>小計</th>
                </tr>
                <% @order.order_products.each do |order| %>
                <tr>
                  <td><%= order.product.name %></td>
                  <td><%= order.product.with_tax_price %>円</td>
                  <td><%= order.amount %>個</td>
                  <td><%= order.product.with_tax_price*order.amount %></td>
                </tr>
                <% end %>
              </thead>
            </table>
        </div>
    </div>
  </div>
</div>