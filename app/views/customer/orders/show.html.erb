<div class="container">
  <div class="row">
    <h3>注文履歴一覧</h3>
      <table class="table table-bordered">
        <thead class="thead-light">
          <tr>
            <th>注文日</th>
            <th>配送先</th>
            <th>注文商品</th>
            <th>支払金額</th>
            <th>ステータス</th>
            <th>注文詳細</th>
          </tr>
        </thead>
        <tbody>
          <% @order.each do |order| %>
          <tr>
            <td>
              <%= order.created_at %>
            </td>
            <td>
              〒<%= order.postal_code %>
              <%= order.address %>
              <%= order.name %>
            </td>
            <td>
              <%= order.product.name %>
            </td>
            <td>
              <%= order.total_payment %>円
            </td>
            <td>
              <%= order.status %>
            </td>
            <td>
              <%= link_to '表示する', order_path(order.id),class:'btn btn-primary' %>
            </td>
          </tr>
        </tbody>
      </table>
  </div>
</div>