<!--ごう作-->
<div class="container">
  <div class="row">
    <div class="mt-3 mb-3">
      <h3>配送先登録</h3>
    </div>
  </div>

    <div class="row">
    <!--newページは設計書にないため部分テンプレートへ-->
      <%= render 'new', delivery_address: @delivery_address %>
    </div>

    <div class="row">
      <div class="mt-3 mb-3">
        <h3>配送先一覧</h3>
      </div>

      <% if @delivery_addresses.present? %>
        <table class="table table-bordered">
          <tr class="table-secondary">
            <th>郵便番号</th>
            <th>住所</th>
            <th>宛名</th>
            <th></th>
          </tr>
          <% @delivery_addresses.each do |delivery_address| %>
          <tr>
            <td><%= delivery_address.delivery_address_zip_code %></td>
            <td><%= delivery_address.delivery_address_other %></td>
            <td><%= delivery_address.delivery_address_name %></td>
            <td>
              <div class="text-center">
                <%= link_to "編集する", edit_delivery_address_path(delivery_address), class: "btn btn-success" %>
                <%= link_to "削除する", delivery_address_path(delivery_address), class: "btn btn-danger", method: :delete, data: {confirm: "本当に削除しますか?"} %>
              </div>
            </td>
          </tr>
          <% end %>
        </table>
      </div>
      <div>
        <% else %>
        <p>登録されている配送先はありません</p>
        <% end %>
      </div>
    </div>
  </div>