<h3>配送先登録/一覧</h3>
<!--newページは設計書にないため部分テンプレートへ-->
<%= render 'new', delivery_address: @delivery_address %>

<table>
  <tr>
    <th>郵便番号</th>
    <th>住所</th>
    <th>宛名</th>
    <th></th>
  </tr>
  <% @delivery_addresses.each do |delivery_address| %>
  <tr>
    <td><%= delivery_address.zip_code %></td>
    <td><%= delivery_address.address %></td>
    <td><%= delivery_address.name %></td>
    <td>
      <%= link_to "編集する", edit_delivery_address_path, class: "btn btn-success" %>
      <%= link_to "削除する", delivery_address_path, class: "btn btn-success", method: :delete, data: {confirm: "本当に削除しますか?"} %>
    </td>
  </tr>
  <% end %>
</table>