<div class='container'>
  <div class='row my-5'>
    <div class='col-md-2'>
      <table class="table table-bordered">
        <thead>
          <th class="table-dark">ジャンル検索</th>
        </thead>
        <tbody>
          <tr>
            <td>ケーキ</td>
            </tr>
          <tr>
            <td class="table-danger">焼き菓子</td>
          </tr>
          <tr>
            <td>プリン</td>
          </tr>
          <tr>
            <td class="table-danger">キャンディ</td>
          </tr>
        </tbody>
      </table>
    </div>
    <div class="col-5">
      <%= image_tag @product.get_image(300,300) %>
    </div>
    <div class="col-5">
      <h2><%= @product.name %></h2>
      <%= @product.description %><br>
      <br>
      ¥<%= @product.with_tax_price %>（税込）
      <br>
      <br>
      <div class='row'>
        <div class="col-8">
          <% if @product.is_active == true %>
            <%= form_with model: CartItem.new, url: cart_items_path, method: :post do |f| %>
            <%= f.select :product_amount, [*1..5],{include_blank: '個数選択'}, {class: "w-80 d-inline form-control needs-validation", required: true} %>
            <%= f.hidden_field :product_id, :value => @product.id %>
        </div>
          <div class="col-4">
            <%= f.submit "カートに入れる", class: "ml-2 btn btn-success"%>
            
            <% end %>
          <% end %>
        </div>
    </div>
    </div>

</div>

