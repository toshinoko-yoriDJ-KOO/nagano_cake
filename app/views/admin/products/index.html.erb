<!--しんちゃん作成-->
<div class="container">
  <!--m=margin y=top,bottom 3=1rem-->
  <div class="row my-3">
    <!--ブレークポイントはsm(576px以上、768px未満)-->
    <div class="col-sm-8 offset-sm-1">
      <h3><strong>商品一覧</strong></h3>
    </div>
    <div class="col-sm-3 px-sm-5">
      <!--リンク＋bootstrapで丸ボタン作成 新規登録画面(newページ)に遷移-->
      <%= link_to "+", new_admin_product_path, class: "btn btn-primary rounded-circle p-0,width:2rem;height:2rem" %>
    </div>
      <table class="table">
        <thead>
          <tr>
            <th>商品ID</th>
            <th>商品名</th>
            <th>税抜価格</th>
            <th>ジャンル</th>
            <th>ステータス</th>
          </tr>
        </thead>
        <tbody>
          <!--eachメソッドで要素を順番に取り出す-->
          <% @products.each do |product| %>
           <tr>
             <!--商品ID-->
             <td><%= product.id %></td>
             <!--商品名-->
             <td><%= link_to product.name, admin_product_path(product.id) %></td>
             <!--税抜価格-->
             <td><%= product.price %></td>
             <!--ジャンル-->
             <td><%= product.type.name %></td>
             <!--p.statusの返り値が真だったら販売中,偽だったら販売停止中-->
             <% if product.is_active == true %>
             <td><strong class="text-success">販売中</strong></td>
             <% else %>
						 <td class="font-red">販売停止中</td>
						 <% end %>
           </tr>
          <% end %>
        </tbody>
      </table>
  <%= paginate @products, class: "paginate" %>
  </div>
</div>
