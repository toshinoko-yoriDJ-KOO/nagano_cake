<!--batako-->
<div class="container mt-5 mb-5">
   <div class="row">
    <div class="mb-4">
    <h3><%= @customer.last_name %><%= @customer.first_name %>さんの会員詳細</h3>
    <table class="table table-borderless">
      <tbody>
        <tr>
          <th>会員ID</th>
          <td><%= @customer.id %></td>
        </tr>
        <tr>
          <th>氏名</th>
          <td><%= @customer.last_name %><%= @customer.first_name %></td>
        </tr>
        <tr>
          <th>フリガナ</th>
          <td><%= @customer.last_name_kana %><%= @customer.first_name_kana %></td>
        </tr>
        <tr>
          <th>郵便番号</th>
          <td><%= @customer.zip_code %></td>
        </tr>
        <tr>
          <th>住所</th>
          <td><%= @customer.address %></td>
        </tr>
        <tr>
          <th>電話番号</th>
          <td><%= @customer.phone_number %></td>
        </tr>
        <tr>
          <th>メールアドレス</th>
          <td><%= @customer.email %></td>
        </tr>
        <tr>
          <th>会員ステータス</th>
          <% if @customer.is_active == true %>
            <td><p class="text-success">有効</p></td>
          <% elsif %>
            <td><p class="text-secondary">退会</p></td>
          <% end %>
        </tr>
      </tbody>
       <td><%= link_to "編集する", edit_admin_customer_path(@customer.id), class: "btn btn-secondary"%></td>
       </tr>
       <tr>
       <td><%= link_to "注文履歴一覧を見る", admin_root_path(@customer.id), class: "btn btn-secondary"%></td>
      </table>
    </div>
  </div>
</div>