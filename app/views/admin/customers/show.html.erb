<!--batako-->
<div class="container mt-5 mb-5">
  <div class="text-center"></div>
   <div class="row">
    <h3 class="mb-4"><strong><%= @customer.last_name %><%= @customer.first_name %>さんの会員詳細</strong></h3>
    <table class="table table-borderless">
      <tbody>
        <tr>
          <th>会員ID</th>
          <td><%= @customer.id %></td>
        </tr>
        <tr>
          <th>氏名</th>
          <td><%= @customer.last_name %><%= @customer.first_name %></td>
        </tr>
        <tr>
          <th>フリガナ</th>
          <td><%= @customer.last_name_kana %><%= @customer.first_name_kana %></td>
        </tr>
        <tr>
          <th>郵便番号</th>
          <td><%= @customer.postcode %></td>
        </tr>
        <tr>
          <th>住所</th>
          <td><%= @customer.residence %></td>
        </tr>
        <tr>
          <th>電話番号</th>
          <td><%= @customer.phone_number %></td>
        </tr>
        <tr>
          <th>メールアドレス</th>
          <td><%= @customer.email %></td>
        </tr>
        <tr>
          <th>会員ステータス</th>
          <% if @customer.is_deleted == false %>
            <td><p class="text-success">有効</p></td>
          <% elsif %>
            <td><p class="text-secondary">退会</p></td>
          <% end %>
        </tr>
      </tbody>
       <td><%= link_to "編集する", edit_admin_customer_path(@customer.id), class: "btn btn-secondary"%></td>
       </tr>
       <tr>
       <td><%= link_to "注文履歴一覧を見る", order_path(@customer.id), class: "btn btn-secondary"%></td>
    </div>
  </div>