<!--batako-->
<div class="container mt-5 mb-5">
  <%= form_with model: @customer, url:admin_customer_path, method: :patch do |f| %>
  <div class="row">
    <h3 class="mb-4"><strong>会員情報編集</strong></h3>
    <table class="table table-borderless">
       <%= form_with model: @customer, url: admin_customer_path(@customer) do |f| %>
       <div class="col-10">
          <div class="form_group col-9">
            <%= f.label :"会員ID", class: "col-4 control-label" %>
            <%= f.label :"#{@customer.id}" %>
          </div>
          
          <div class="form-group col-9">
            <%= f.label :"氏名", class: "col-4 control-label" %>
            <%= f.text_field :last_name, autofoucus: true, class: "col-3" %>
            <%= f.text_field :first_name, autofoucus: true, class: "col-3" %>
          </div>
           
          <div class="form-group col-9">
            <%= f.label :"フリガナ", class: "col-4 control-label" %>
            <%= f.text_field :last_name_kana, autofoucus: true, class: "col-3" %>
            <%= f.text_field :first_name_kana, autofoucus: true, class: "col-3" %>
          </div>
          
          <div class="form-group col-9">
            <%= f.label :"郵便番号", class: "col-4 control-label" %>
            <%= f.text_field :post_code, class: "col-3" %>
          </div>
           
          <div class="form-group col-9">
            <%= f.label :"住所", class: "col-4 control-label" %>
            <%= f.text_field :city, autofaucus: true, class: "col-7" %>
          </div>
          
          <div class="form-group col-9">
            <%= f.label :"電話番号", class: "col-4 control-label" %>
            <%= f.text_field :telephone, autofaucus: true, class: "col-3" %>
          </div>
          
          <div class="form-group col-9">
            <%= f.label :"メールアドレス", class: "col-4 control-label" %>
            <%= f.text_field :email, autofaucus: true, class: "col-5" %>
          </div>
            
          <div class="form-group col-xs-9">
            <%= f.label :"会員ステータス", class: "col-sm-4 control-label" %>
          　<%= f.radio_button :is_deleted, true %>
          　<%= f.label :is_deleted, "退会", {value: :true, style: "display: inline-block;"} %>
          　<%= f.radio_button :is_deleted, false %>
          　<%= f.label :is_deleted, "有効", {value: :false, style: "display: inline-block;"} %>
          </div>
            
          <div class="actions  col-9 col-offset-4">
            <%= f.submit '変更を保存する' ,class: "btn btn-success" %>
          </div>
        <% end %>
      </div>
    </div>
  </div>